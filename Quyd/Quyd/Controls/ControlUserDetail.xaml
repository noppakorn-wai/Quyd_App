<UserControl x:Class="Quyd.Controls.ControlUserDetail"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignWidth="385"
    Width="385" Height="70" Margin="5,5,5,0">

    <Grid x:Name="LayoutRoot">
        <Image HorizontalAlignment="Left" Height="24" VerticalAlignment="Top" Width="24" Source="../Resources/Images/phone_2_icon_24.png"/>
        <HyperlinkButton x:Name="BoxFacebook" Content="facebook" TargetName="_blank" VerticalAlignment="Top" FontSize="20" FontFamily="Tahoma" Foreground="#FF6161B9" HorizontalContentAlignment="Left" Margin="29,0,0,0"/>
        <Image HorizontalAlignment="Left" Height="24" VerticalAlignment="Top" Width="24" Source="../Resources/Images/mail_icon_24.png" Margin="0,29,0,0"/>
        <TextBlock x:Name="BoxMail" TextWrapping="Wrap"  Text="{Binding Path = Email, FallbackValue='example@example.com'}" HorizontalAlignment="Left" VerticalAlignment="Top" Foreground="Black" Margin="39,29,0,0" Height="31" FontFamily="Tahoma" Padding="0" Width="336"/>
    </Grid>

</UserControl>