<UserControl x:Class="Quyd.Controls.ControlItem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="73" d:DesignWidth="48">
    
    <Grid x:Name="LayoutRoot">
        <Image x:Name="ImageIcon" HorizontalAlignment="Left" Height="48" VerticalAlignment="Top" Width="48" Source="../Resources/Images/appbar.tag.png"/>
        <TextBlock x:Name="Quantity" HorizontalAlignment="Left" TextWrapping="Wrap" Text="xx" VerticalAlignment="Top" Foreground="Black" Margin="14,48,0,0" FontFamily="Tahoma" Height="25" Width="20"/>
    </Grid>
</UserControl>