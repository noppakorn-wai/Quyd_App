<UserControl x:Class="Quyd.Controls.ControlItemDetail"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="78" d:DesignWidth="480">

    <Grid x:Name="LayoutRoot" Margin="5" Background="#19FFFFFF">
        <Image x:Name="ImageIcon" HorizontalAlignment="Left" Height="48" VerticalAlignment="Top" Width="48" Source="/Quyd;component/Resources/Images/appbar.warning.png" Margin="10,10,0,10"/>
        <StackPanel x:Name="StackInfo" Margin="58,10,100,10">
            <TextBlock x:Name="BoxItemName" TextWrapping="Wrap" Text="TextBlock" FontFamily="Tahoma" FontSize="20" FontWeight="Bold" Foreground="Black"/>
            <TextBlock x:Name="BoxInfo" TextWrapping="Wrap" Text="TextBlock" FontFamily="Tahoma" FontSize="18" Foreground="Black"/>
        </StackPanel>
        <TextBox x:Name="BoxValue" HorizontalAlignment="Right" TextWrapping="Wrap" Text="Cost" FontSize="20" VerticalAlignment="Center" Foreground="Black" Padding="0,0,0,0" Margin="0,0,0,0" Width="80" Height="auto" FlowDirection="RightToLeft" FontFamily="Tahoma" />
    </Grid>
    
</UserControl>