<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:Quyd="clr-namespace:Quyd.Controls" x:Class="Quyd.Controls.ControlUserProfile"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignWidth="250"  d:DesignHeight="84" >

    <Grid x:Name="LayoutRoot">
        <TextBlock x:Name="username" Margin="89,10,10,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="32" Foreground="Black" Height="40" FontFamily="Tahoma" Text="{Binding Path = Name, FallbackValue='ชื่อผู้ใช้'}"/>
        <Image x:Name="profilePicture" HorizontalAlignment="Left" Height="84" VerticalAlignment="Top" Width="84" Source="{Binding Path = ProfilePicture, FallbackValue='../Resources/Images/user1.png'}"/>
        <Quyd:ControlStar HorizontalAlignment="Left" VerticalAlignment="Top" Margin="89,55,0,0"/>
    </Grid>
    
</UserControl>